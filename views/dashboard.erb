<div class="small-6 small-offset-3 columns">
  <div class="callout primary">
    <h3>IP</h3>
    <p>"<%= @ip %>"</p>
  </div>

  <div class="callout primary">
    <h3>Location</h3>
    <p>
      <%= @geolocation.city %>,
      <%= @geolocation.state %>,
      <%= @geolocation.country %>
    </p>
  </div>
  <div class="callout primary">
    <h3>Weather</h3>
    <p>
      <img src="<%= @info["icon_url"] %>">
      <%= @info["weather"] %>
      Current Temperature: <%= @info["temperature_string"] %>
    </p>
  </div>
  <div class="callout primary">
    <h3>Events</h3>
    <ul>
      <% @events.each do |event| %>
      <li><%= event["title"] %> @ <%= event["venue"]["name"] %></li>
      <% end %>
  </ul>
  </div>
  <div class="callout primary">
    <h3>Tech News</h3>
    <ul>
      <% @tech.each do |t| %>
        <li> <%= t["title"] %></li>
        <%= t["abstract"] %>
        <% end %>
    </ul>
  </div>
</div>
